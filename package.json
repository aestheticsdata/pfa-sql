{
  "name": "pfa",
  "version": "1.0.0",
  "main": "index.js",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "watch": [
      "src/"
    ],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "devnodemon": "nodemon src/server.ts",
    "devnodemon:debug": "nodemon --inspect-brk src/server.ts",
    "devalt:server": "nodemon --watch './**/*.ts' --exec 'ts-node' src/server.ts",
    "server": "nodemon src/server.js",
    "client": "npm start --prefix pfa-client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "tsc --project ./",
    "test": "jest --config ./jest.config.json"
  },
  "license": "MIT",
  "repository": "https://github.com/aestheticsdata/pfa.git",
  "author": "aestheticsdata <aesthetics.data@gmail.com>",
  "dependencies": {
    "@prisma/client": "^2.23.0",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "chokidar": "^3.5.2",
    "concurrently": "^4.1.2",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "date-fns": "^2.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "generate-password": "^1.4.2",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "node-scp": "^0.0.14",
    "sequelize": "^6.5.1",
    "sharp": "^0.27.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "eslint": "^7.11.0",
    "jest": "^27.0.4",
    "nodemon": "^1.19.1",
    "prisma": "^2.23.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
